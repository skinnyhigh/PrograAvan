@model ProyectoWeb_Martes.Entidades.Usuario

@{
    ViewBag.Title = "IniciarSesion";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="container">

    <div class="row justify-content-center" style="margin-top:5%">
        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-3 d-none d-lg-block"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center"> div>
                                    <h1 class="h4 text-gray-900 mb-4">BIENVENIDO!</h1>
                                    <h3 class="h4 text-gray-900 mb-4">INICIA  SESION</h3>
                                </div>
                                @using (Html.BeginForm("IniciarSesionXYZ", "Inicio"))
                                {
                                    <div class="form-group">
                                        <input id="Identificacion" name="Identificacion" type="text" class="form-control form-control-user"
                                               
                                               placeholder="IDENTIFICACION">
                                        @Html.TextBoxFor(m => m.Identificacion, new { @class="form-control form-control-user", @placeholder = "IDENTIFICACION" >} )



                                    </div>
                                    <div class="form-group">
                                        <input id ="Password" name = "Password" type="password" class="form-control form-control-user"
                                                placeholder="CONTRASEÑA">
                                    </div>

                                    <input type="submit"class="btn btn-primary btn-user btn-block" value="Procesar">

                                }
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("RecuperarAcceso","Inicio")">RECUPERAR ACCESO</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("IniciarSesion","Inicio")">INICIAR SESION</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>